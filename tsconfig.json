{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "paths": {
      "#interfaces/*": ["src/interfaces/*"],
      "#models/*": ["src/models/*"]
    },
    "target": "es2017"
  },
  "include": ["./src/**/*.ts"]
}
