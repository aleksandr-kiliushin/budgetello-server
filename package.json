{
  "author": "aleksandr-kiliushin",
  "dependencies": {
    "@nestjs/apollo": "11.0.5",
    "@nestjs/common": "9.4.0",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "9.4.0",
    "@nestjs/graphql": "11.0.5",
    "@nestjs/mapped-types": "1.2.2",
    "@nestjs/platform-express": "9.4.0",
    "@nestjs/typeorm": "9.0.1",
    "apollo-server-express": "3.12.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "graphql": "16.6.0",
    "jsonwebtoken": "9.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.0",
    "rxjs": "7.8.0",
    "typeorm": "0.3.15"
  },
  "devDependencies": {
    "@nestjs/cli": "9.4.2",
    "@nestjs/schematics": "9.1.0",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.1",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.16.0",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "db-visualizer": "1.0.6",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.1",
    "pg": "8.10.0",
    "prettier": "2.8.8",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": "18.13.0",
    "npm": "8.19.3"
  },
  "license": "UNLICENSED",
  "name": "personal-app-server",
  "private": false,
  "scripts": {
    "build": "nest build",
    "check-types": "tsc --noEmit",
    "check-types:watch": "tsc --noEmit --watch",
    "dev": "rm -rf ./dist && nest start --watch",
    "dev:db-and-api": "rm -rf ./dist && npm run build && docker-compose -f ./compose.dev.yml up",
    "generate-dump": "echo \"pg_dump -U postgres personal_app_db > /var/app/database/dump.sql\" | docker exec -i personal-app-database bash;",
    "generate-testing-db-dump": "(npm run restore-db-from-testing-template) && (echo \"pg_dump -U postgres personal_app_db > /var/app/database/dump.sql\" | docker exec -i personal-app-database bash;)",
    "lint": "eslint \"**/!(migrations)/*.{js,ts}\" --max-warnings=0",
    "lint-staged": "lint-staged",
    "migration:generate": "npm run build && node --loader ts-node/esm ./node_modules/.bin/typeorm migration:generate -d ./src/config/ormConfig.ts",
    "migration:up": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:run -d ./src/config/ormConfig.ts",
    "migration:down": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:revert -d ./src/config/ormConfig.ts",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js,ts,json}\"",
    "remove-containers": "docker stop personal-app-api && docker rm personal-app-api && docker stop personal-app-database && docker rm personal-app-database",
    "remove-images": "docker stop personal-app-database && docker rm personal-app-database && docker rmi personal-app-server-database && docker stop personal-app-api && docker rm personal-app-api && docker rmi personal-app-server-api",
    "restore-db-from-testing-template": "echo \"bash /var/app/database/scripts/restore-db-from-testing-template.sh\" | docker exec -i personal-app-database bash;",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node ./dist/main.js",
    "test": "jest --runInBand",
    "typeorm": "typeorm-ts-node-esm -d ./src/config/ormConfig.ts",
    "visualize-db": "ts-node ./node_modules/db-visualizer/bin/index.js && npm --prefix ./node_modules/db-visualizer run dev:client"
  },
  "version": "1.0.0"
}
