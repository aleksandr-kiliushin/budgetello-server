{
  "author": "aleksandr-kiliushin",
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.11",
    "@nestjs/mapped-types": "1.1.0",
    "@nestjs/platform-express": "9.0.11",
    "@nestjs/typeorm": "9.0.1",
    "jsonwebtoken": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "typeorm": "0.3.9"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.2",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.0.11",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/express": "4.17.13",
    "@types/jest": "29.0.0",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "18.7.16",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "ts-jest": "29.0.0",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.3"
  },
  "engines": {
    "node": "18.9.0",
    "npm": "8.19.1"
  },
  "license": "UNLICENSED",
  "name": "personal-app-server",
  "private": false,
  "scripts": {
    "build": "nest build",
    "check-types:watch": "tsc --project tsconfig.eslint.json --noEmit --watch",
    "dev": "rm -rf ./dist && nest start --watch",
    "dev:db-and-api": "rm -rf ./dist && docker-compose -f ./compose.dev.yml up",
    "init-db": "(echo \"bash /var/app/init-db-1.sh\" | docker exec -i personal-app-database bash;) && (npm run typeorm -- migration:run) && (echo \"bash /var/app/init-db-2.sh\" | docker exec -i personal-app-database bash;)",
    "lint": "eslint {src,tests}/**/*.ts",
    "prettier": "prettier --write '**/*.ts'",
    "remove-images": "docker stop personal-app-api && docker rm personal-app-api && docker rmi personal-app-server_api && docker stop personal-app-database && docker rm personal-app-database && docker rmi personal-app-server_database",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "test": "jest --runInBand",
    "test:e2e": "jest --runInBand --testPathPattern=e2e\\/.+\\.test\\.ts",
    "test:unit-and-integration": "jest --runInBand --testPathPattern=src\\/.+\\.test\\.ts",
    "typeorm": "typeorm-ts-node-esm -d ./src/config/ormConfig.ts"
  },
  "version": "0.0.1"
}
